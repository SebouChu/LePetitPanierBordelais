<div id="login-page">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: 'Mail', class:'input-login' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off",placeholder: 'Mot de passe', class:'input-login' %>
    </div>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>

</div>
