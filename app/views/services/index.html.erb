<% content_for :pagetitle do %>Services<% end %>
<% content_for :pagename do %>Nos services<% end %>

<div id="services-index">

<!-- RESTAURANTS -->

  <h3>Nos derniers restaurants</h3>

  <div class="carousel" id="foo">
     <% @restaurants.each do |r| %>
       <div class="item-carousel" data-animation="opacity">
         <% if r.image %>
         <%= link_to r.image, service_path(r) %>
         <% else %>
         <%= link_to image_tag('bread.jpg'), service_path(r) %>
         <% end %>
         <p><%= r.name %></p>
       </div>
     <%end%>
  </div>

  <p><%= link_to "Voir plus", restaurants_path, class:"red-button" %></p>

<!-- MARCHE -->

  <h3>Nos derniers march√©s</h3>

  <div class="carousel" id="foo-2">
      <% @marches.each do |m| %>
        <div class="item-carousel" data-animation="opacity">
          <% if m.image %>
          <%= link_to m.image, service_path(m) %>
          <% else %>
          <%= link_to image_tag('paysans.jpg'), service_path(m) %>
          <% end %>
          <p><%= m.name %></p>
        </div>
      <% end %>
  </div>

  <p><%= link_to "Voir plus", marches_path, class:"red-button" %></p>

</div>
