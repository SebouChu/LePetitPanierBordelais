<% content_for :pagetitle do %>Restaurants<% end %>
<% content_for :pagename do %>Nos restaurants<% end %>
<% content_for :meta_description do %>Venez parcourir les différents restaurants bordelais référencés par le Petit Panier Bordelais pour découvrir les produits de la région.<% end %>
<% content_for :twitter_description do %>Venez parcourir les différents restaurants bordelais référencés par le Petit Panier Bordelais pour découvrir les produits de la région.<% end %>
<% content_for :og_description do %>Venez parcourir les différents restaurants bordelais référencés par le Petit Panier Bordelais pour découvrir les produits de la région.<% end %>

<div class="services-items" id="service-restau">
  <% @restaurants.each do |r| %>
    <div class="item-container">
      <% if r.image %>
      <%= link_to image_tag(r.image), service_path(r) %>
      <% else %>
      <%= link_to image_tag('bread.jpg'), service_path(r) %>
      <% end %>
      <p><%= r.name %></p>
    </div>
  <% end %>
</div>

<p><%= link_to "Voir plus", root_path, class:"red-button" %></p>
