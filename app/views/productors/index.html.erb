<div id="producteurs-index">
  <h3>Nos derniers apiculteurs</h3>

  <div class="carousel" id="carousel-api">
    <% @apiculteurs.each do |a| %>
    <div class="item-carousel" data-animation="opacity">
      <% if a.image %>
        <%= link_to image_tag(a.image), productor_path(a) %>
      <% else %>
        <%= link_to image_tag('apiculteurs.jpg'), productor_path(a) %>
      <% end %>
      <p><%= a.name %></p>
    </div>
    <% end %>
  </div>

  <p><%= link_to "Voir plus", apiculteurs_path, class:"red-button"%></p>

