<% content_for :pagetitle do %>Producteurs<% end %>
<% content_for :pagename do %>Nos producteurs<% end %>
<% content_for :meta_description do %>Venez parcourir les différents producteurs bordelais référencés par le Petit Panier Bordelais pour découvrir les produits de la région.<% end %>
<% content_for :twitter_description do %>Venez parcourir les différents producteurs bordelais référencés par le Petit Panier Bordelais pour découvrir les produits de la région.<% end %>
