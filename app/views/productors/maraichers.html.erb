<% content_for :pagetitle do %>Maraîchers<% end %>
<% content_for :pagename do %>Nos maraîchers<% end %>
<% content_for :meta_description do %>Venez parcourir les différents maraîchers bordelais référencés par le Petit Panier Bordelais pour découvrir les fruits et légumes de la région.<% end %>
<% content_for :twitter_description do %>Venez parcourir les différents maraîchers bordelais référencés par le Petit Panier Bordelais pour découvrir les fruits et légumes de la région.<% end %>
<% content_for :og_description do %>Venez parcourir les différents maraîchers bordelais référencés par le Petit Panier Bordelais pour découvrir les fruits et légumes de la région.<% end %>

<div class="productor-items" id="produc-mar">
  <% @maraichers.each do |m| %>
    <div class="item-container">
      <% if m.image %>
      <%= link_to image_tag(m.image), productor_path(m) %>
      <% else %>
      <%= link_to image_tag('maraichers.jpg'), productor_path(m) %>
      <% end %>
      <p><%= m.name %></p>
    </div>
  <% end %>
</div>
